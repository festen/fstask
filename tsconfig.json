{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "allowJs": false,
    "lib": [
      "ES2021"
    ]
  }
}
